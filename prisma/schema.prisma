
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plant {
  id          String     @id @default(cuid())
  name        String
  species     String?
  description String?
  location    String?
  plantedDate DateTime   @default(now())
  lastWatered DateTime?
  lastFertilized DateTime?
  health      String     @default("healthy") // healthy, needs_water, sick, etc.
  imageUrl    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  careLogs    CareLog[]
}

model CareLog {
  id        String   @id @default(cuid())
  plantId   String
  plant     Plant    @relation(fields: [plantId], references: [id])
  action    String   // water, fertilize, prune, etc.
  notes     String?
  createdAt DateTime @default(now())
} 