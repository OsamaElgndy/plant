generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  phone     String     @unique
  password  String
  favorites Favorite[]
  plants    Plant[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum StatusPuy {
  CONFIRMATION
  REQUEST
  RECEIVE
}

model Plant {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  category    String
  seasons     String
  imageUrl    String
  userId      Int?
  user        User?     @relation(fields: [userId], references: [id])
  statusPuy   StatusPuy @default(CONFIRMATION)
  status      Boolean   @default(true)
  favorites   Favorite[]
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())
}

model Favorite {
  userId  Int
  plantId Int
  user    User   @relation(fields: [userId], references: [id])
  plant   Plant  @relation(fields: [plantId], references: [id])

  @@id([userId, plantId])
}